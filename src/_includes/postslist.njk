<div class="row row-cols-1 row-cols-md-3 g-4">
  {% for post in postslist | reverse %}
  <div class="col">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</h5>
        <h6 class="card-subtitle text-muted mb-1"><time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time></h6>
        
        {% for tag in post.data.tags | filterTagList %}
          {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
          <a href="{{ tagUrl | url }}"><span class="badge bg-danger">{{ tag }}</span></a>
        {% endfor %}
      </div>
      <div class="card-footer">
        <a href="{{ post.url | url }}" class="card-link">Read More</a>
      </div>
    </div>
  </div>
  {% endfor %}
</div>
